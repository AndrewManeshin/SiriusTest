<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="5dip" android:color="#CCAE37" />
            <gradient android:angle="-90" android:startColor="#CCAE37" android:endColor="#CCAE37"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#DDBC3A" />
            <solid android:color="#DDBC3A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#F4D144" />
            <gradient android:angle="-90" android:startColor="#F4D144" android:endColor="#F4D144" />
        </shape>
    </item>
</selector>